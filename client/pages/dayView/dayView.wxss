/* pages/days/index.wxss */

.bgimage_bottom {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 0;
}

.bgimage {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 1;
  -webkit-filter: blur(1px);
  filter: blur(1px);
}
.swiper {
  height: 100%;
  width: 100%;
  z-index: 5;
  position: fixed;
  top: 0;
}

.scrollview {
  height: 100%;
  width: 100%;
}

.page__hd {
  text-align: center;
  position: absolute;
  top: 50%;
  height: 400rpx;
  margin-top: -230rpx;
  right: 0;
  left: 0;
  padding: 0;
}

.page__title {
  color: #fff;
  font-size: 50rpx;
  font-weight: 0;
  text-align: center;
}

.page__days {
  color: #fff;
  font-size: 180rpx;
  font-weight: 700;
  line-height: 180rpx;
  text-align: center;
}

.page__desc {
  color: #fff;
  font-size: 36rpx;
  line-height: 36rpx;
  text-align: center;
}

.day_item {
  border-top: 0rpx;
  padding-top: 20rpx;
}

.addday {
  width: 100rpx;
  color: #fff;
  height: 100rpx;
  font-size: 88rpx;
  font-weight: bold;
  line-height: 89rpx;
  border-radius: 100rpx;
  display: inline-block;
  border: 1px solid #fff;
  text-align: center;
  background: url(http://qcloudtest-1255501801.cn-south.myqcloud.com/1514963799213-Sy1vXb9Xz.png) no-repeat center;
  background-size: 50rpx 50rpx;
}

.page_bottom {
  position: fixed;
  bottom: 68rpx;
  z-index: 6;
  text-align: center;
  width: 100%;
}

.page_days_label {
  display: inline-block;
  color: #fff;
  font-size: 28rpx;
  line-height: 33rpx;
  font-weight: 100;
  background-color: red;
  padding: 2rpx;
  position: absolute;
}
