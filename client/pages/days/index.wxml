<!--pages/days/index.wxml-->
<view class="page">
  <image src='http://image.bitautoimg.com/robot/2017/12/30/215525859692.jpg' mode='scaleToFill' class='bgimage'></image>
  <view class="addday" bindtap='addday'>
    ＋添加
  </view>
  <scroll-view scroll-y class='scrollview'>

    <view class="page__hd">
      <view class="page__title">{{topEvent.event}} {{item.eventTip}}</view>
      <view class="page__days">{{topEvent.days}} 
      <view class='page_days_label'>{{topEvent.label}}</view>
      </view>
      <view class="page__desc">{{topEvent.eventdate}}</view>
    </view>
    <block wx:for="{{events}}">
      <view class="day_item" data-id='{{item.id}}' bindtap='editDay'>
        <view class="day_left">
          <view class='day_event'>{{item.event}} {{item.eventTip}}</view>
          <view class='day_date'>{{item.eventdate}}</view>
        </view>
        <view class="day_right">
          <view class='day_days'>{{item.days}}</view>
          <view class='day_label'>{{item.label}}</view>
        </view>
      </view>
    </block>
  </scroll-view>

</view>