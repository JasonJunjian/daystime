/* pages/days/index.wxss */

.bgimage_bottom {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 0;
}

.bgimage {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 1;  
}

.scrollview {
  height: 88%;
  width: 100%;
  z-index: 2;
  position: fixed;
  top: 0;
}

.page__hd {
  padding: 100rpx 40rpx;
}

.page__title {
  color: #fff;
  font-size: 40rpx;
  font-weight: 0;
}

.page__days {
  color: #fff;
  font-size: 160rpx;
  font-weight: 700;
  line-height: 160rpx;
}

.page__desc {
  color: #fff;
  font-size: 26rpx;
  line-height: 26rpx;
}

.day_item {
  border-top: 0rpx;
  padding-top: 20rpx;
}

.day_left {
  display: inline-block;
  text-align: left;
  color: #fff;
  padding-left: 40rpx;
  box-sizing: border-box;
  height: 100%;
}

.day_right {
  display: inline-block;
  color: #fff;
  box-sizing: border-box;
  height: 100%;
  float: right;
  padding-right: 40rpx;
  text-align: right;
}

.day_days {
  color: #fff;
  font-size: 60rpx;
  line-height: 60rpx;
}

.day_label {
  color: #fff;
  font-size: 28rpx;
  line-height: 33rpx;
  font-weight: 100;
}

.day_event {
  color: #fff;
  font-size: 41rpx;
  line-height: 60rpx;
}

.day_date {
  color: #fff;
  font-size: 28rpx;
  line-height: 33rpx;
  font-weight: 100;
}

.addday {
  width: 100rpx;
  color: #fff;
  height: 100rpx;
  font-size: 88rpx;
  font-weight: bold;
  line-height: 89rpx;
  border-radius: 100rpx;
  display: inline-block;
  border: 0px solid #fff;
  text-align: center;
   background: url(http://qcloudtest-1255501801.cn-south.myqcloud.com/1515827360895-HyKjlVwVM.png) no-repeat center;
  background-size: 100rpx 100rpx; 
}

.page_bottom {
  position: fixed;
  bottom: 18rpx;
  z-index: 5;
  text-align: center;
  width: 100%;
}

.page_days_label {
  display: inline-block;
  color: #fff;
  font-size: 28rpx;
  line-height: 33rpx;
  font-weight: 100;
  background-color: red;
  padding: 2rpx;
}
.swiper {
  height: 100%;
  width: 100%;
  z-index: 5;
  position: fixed;
  top: 0;
}
.style_bottom{
  position: fixed;
  bottom: 0;
  height: 300rpx;
  width: 100%;
  background: rgba(21,21,21,0.7); 
  z-index: 10; 
}
.style_imgopt{
  width: 100%;
  height: 170rpx;

}
.style_add{
  position: absolute;
  left: 0;
  display: inline-block;
  width: 130rpx;
  height: 130rpx;
  margin: 0 0rpx 20rpx 20rpx;  
  background-color: #fff;
  border-radius: 10px;
}
.style_add_bg{
  width: 100%;
  height: 100%;
  background: url(http://qcloudtest-1255501801.cn-south.myqcloud.com/1515829674095-Hyf2K4P4z.png) no-repeat center;
  background-size: 130rpx 130rpx;  
  border-radius:10px;

}
.style_imgs{
  width: 100%;
  height: 130rpx;
  margin: 20rpx 20rpx 20rpx 20rpx;  
}
.sv_imgs{
  display: flex;
  white-space: nowrap;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 150rpx;
  padding-right:20rpx;
}
.sv_imgs_item{
  display: inline-block;
  margin: 0 20rpx 0rpx 0rpx;
  width: 130rpx;
  height: 130rpx;  
  border-radius: 10px; 
}
.sv_imgs_item_current{ 
  border:2px solid #fff;
  box-sizing: border-box;
}