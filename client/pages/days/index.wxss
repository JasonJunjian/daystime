/* pages/days/index.wxss */

.bgimage_bottom {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 0;
}

.bgimage {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 1;
  -webkit-filter: blur(1px);
  filter: blur(1px);
}

.scrollview {
  height: 88%;
  width: 100%;
  z-index: 2;
  position: fixed;
  top: 0;
}

.page__hd {
  padding: 100rpx 40rpx;
}

.page__title {
  color: #fff;
  font-size: 40rpx;
  font-weight: 0;
}

.page__days {
  color: #fff;
  font-size: 160rpx;
  font-weight: 700;
  line-height: 160rpx;
}

.page__desc {
  color: #fff;
  font-size: 26rpx;
  line-height: 26rpx;
}

.day_item {
  border-top: 0rpx;
  padding-top: 20rpx;
}

.day_left {
  display: inline-block;
  text-align: left;
  color: #fff;
  padding-left: 40rpx;
  box-sizing: border-box;
  height: 100%;
}

.day_right {
  display: inline-block;
  color: #fff;
  box-sizing: border-box;
  height: 100%;
  float: right;
  padding-right: 40rpx;
  text-align: right;
}

.day_days {
  color: #fff;
  font-size: 60rpx;
  line-height: 60rpx;
}

.day_label {
  color: #fff;
  font-size: 28rpx;
  line-height: 33rpx;
  font-weight: 100;
}

.day_event {
  color: #fff;
  font-size: 41rpx;
  line-height: 60rpx;
}

.day_date {
  color: #fff;
  font-size: 28rpx;
  line-height: 33rpx;
  font-weight: 100;
}

.addday {
  width: 100rpx;
  color: #fff;
  height: 100rpx;
  font-size: 88rpx;
  font-weight: bold;
  line-height: 89rpx;
  border-radius: 100rpx;
  display: inline-block;
  border: 1px solid #fff;
  text-align: center;
}

.page_bottom {
  position: fixed;
  bottom: 68rpx;
  z-index: 5;
  text-align: center;
  width: 100%;
}

.page_days_label {
  display: inline-block;
  color: #fff;
  font-size: 28rpx;
  line-height: 33rpx;
  font-weight: 100;
  background-color: red;
  padding: 2rpx;
}
